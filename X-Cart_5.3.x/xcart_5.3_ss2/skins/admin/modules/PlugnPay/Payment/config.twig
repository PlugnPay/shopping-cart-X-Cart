    <td>
      <input type="text" id="settings_pnp_gateway_account" name="settings[pnp_gateway_account]" value="{{ this.paymentMethod.getSetting('pnp_gateway_account') }}" class="validate[required,maxSize[25]]" />
    </td>
  </tr>
</table>

